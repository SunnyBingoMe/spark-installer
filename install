#!/bin/bash
# create a dedicated account for hadoop
#sudo ./src/create_ec2-user

# bootstrap as ec2-user
    # generate ssh key 
    # install java
    # create directories
sudo su ec2-user -c ./src/bootstrap

# install hadoop (2.2.0)
sudo su ec2-user -c ./src/hadoop

# install scala (2.10.3)
sudo su ec2-user -c ./src/scala

# install spark (1.0)
sudo su ec2-user -c ./src/spark
#sudo su ec2-user -c ./src/sparkR
